# ==============================================
# CONFIGURACIÓN GENERAL DEL SERVICIO
# ==============================================
SERVICE_NAME=payment-svc
ENVIRONMENT=development
PORT=8080

# ==============================================
# BASE DE DATOS (PostgreSQL)
# ==============================================
SQL_DRIVER=pgx
SQL_DATA_SOURCE=postgres://postgres:postgres@localhost:5432/payment_db?sslmode=disable

# ==============================================
# PASARELA DE PAGO: COBRE
# ==============================================
COBRE_API_KEY=your_cobre_api_key_here
COBRE_API_SECRET=your_cobre_api_secret_here
COBRE_BALANCE_ID=your_cobre_balance_id_here
COBRE_URL=https://api.cobre.co

# ==============================================
# PASARELA DE PAGO: WOMPI
# ==============================================
# Para desarrollo usa: https://sandbox.wompi.co/v1
# Para producción usa: https://production.wompi.co/v1
WOMPI_BASE_URL=https://sandbox.wompi.co/v1
WOMPI_PRIVATE_KEY=your_wompi_private_key_here
WOMPI_EVENTS_SECRET=your_wompi_events_secret_here
